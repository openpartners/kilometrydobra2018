{% extends "layouts/admin.twig" %}

{% block content %}

<h2>Państwa<a href="/wp-admin/admin.php?page=kdm_country_add" class="add-new-h2">Dodaj nowe</a></h2>
<table class="wp-list-table widefat">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        {% for country in countries %}
        <tr{% if loop.index is odd %} class="alternate"{% endif %}>
            <td>{{ country.name }}</td>
            <td>
                <a href="/wp-admin/admin.php?page=kdm_country_edit&country_id={{country.country_id}}">Edytuj</a>
                <!-- <a href="/wp-admin/admin.php?page=kdm_country_remove&country_id={{country.country_id}}">Usuń</a> -->
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
